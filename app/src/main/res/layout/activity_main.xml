<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/student_name_text_view"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <TextView
        android:id="@+id/grade_average_text_view"
        android:layout_width="267dp"
        android:layout_height="65dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/student_name_text_view"
        app:layout_constraintStart_toStartOf="@+id/student_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/student_name_text_view"
        app:layout_constraintVertical_bias="0.118" />


    <Button
        android:id="@+id/display_student_grade_average_button"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:layout_marginTop="140dp"
        android:text="@string/display_student_grade_average_button"
        app:layout_constraintEnd_toEndOf="@+id/grade_average_text_view"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="@+id/grade_average_text_view"
        app:layout_constraintTop_toBottomOf="@+id/grade_average_text_view" />

    <Button
        android:id="@+id/prev_student_button"
        android:layout_width="247dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:text="@string/prev_student_button"
        app:layout_constraintEnd_toEndOf="@+id/display_student_grade_average_button"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/display_student_grade_average_button"
        app:layout_constraintTop_toBottomOf="@+id/display_student_grade_average_button" />

    <Button
        android:id="@+id/next_student_button"
        android:layout_width="232dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:text="@string/next_student_button"
        app:layout_constraintEnd_toEndOf="@+id/prev_student_button"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/prev_student_button"
        app:layout_constraintTop_toBottomOf="@+id/prev_student_button" />
</androidx.constraintlayout.widget.ConstraintLayout>