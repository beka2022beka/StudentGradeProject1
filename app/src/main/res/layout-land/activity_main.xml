<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/student_name_text_view"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:text="@string/student_name_text_view"
        android:layout_gravity="top|start"
         />

    <TextView
        android:id="@+id/grade_average_text_view"
        android:layout_width="267dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:text="@string/grade_average_text_view"
        android:layout_gravity="top|end"
         />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="467dp"
        android:layout_height="169dp"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/display_student_grade_average_button"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/display_student_grade_average_button" />


        <Button
            android:id="@+id/prev_student_button"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/prev_student_button" />

        <Button
            android:id="@+id/next_student_button"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/next_student_button" />
    </LinearLayout>


</FrameLayout>